class Solution {
    
    fun solution(n: Int): Int {
        var answer: Int = 0
        var answer2 : String = ""
        var number = n
        
        while(number > 0) {
            answer2 += (number % 3).toString()
            number /= 3
        }
        
        answer = answer2.toInt(3)
        
        return answer
    }
}
